<%- include('header')%>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit Admin</strong> Form
                            </div>
                            <div class="card-body card-block">
                                <form action="/admin/Editupdatedata" method="post" enctype="multipart/form-data"
                                    class="form-horizontal">
                                    <input type="hidden" name="oldId" value="<%=Update.id%>">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Enter First Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <% let namelist = Update.name%>
                                            <% let name = namelist.split(" ")%>
                                            <input type="text" id="text-input" name="fname"
                                                placeholder="Enter First Name" class="form-control"
                                                value="<%=name[0]%>">

                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Enter Last Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="lname"
                                                placeholder="Enter Last Name" class="form-control"
                                                value="<%=name[1]%>">

                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Enter Your Email
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" name="email" placeholder="Enter Email"
                                                class="form-control" value="<%=Update.email%>">

                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="textarea-input" class=" form-control-label">Description</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <textarea name="description" id="textarea-input" rows="3"
                                                placeholder="Content..." class="form-control"> <%= Update.description%>
                                        </textarea>

                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Select Gender</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-radio1" class="form-check-label ">
                                                    <input type="radio" id="inline-radio1" name="gender" value="male" 
                                                    <% if(Update.gender=='male' ){ %> <%= 'checked' %> <%}%> class="form-check-input">Male
                                                </label>
                                                <label for="inline-radio2" class="form-check-label ">
                                                    <input type="radio" id="inline-radio2" name="gender" value="female"
                                                        <% if(Update.gender=='female' ){ %>
                                                    <%= 'checked' %>
                                                        <%}%>
                                                            class="form-check-input">Female
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Select Hobby</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-checkbox1" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox1" name="hobby"
                                                        value="reading" class="form-check-input" <%
                                                        if(Update.hobby.includes('reading')){%>
                                                    <%= 'checked' %>
                                                        <% } %>>Reading
                                                </label>
                                                <label for="inline-checkbox2" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox2" name="hobby"
                                                        value="music" class="form-check-input" <%
                                                        if(Update.hobby.includes('music')){%>
                                                    <%= 'checked' %>
                                                        <% } %>>Music
                                                </label>
                                                <label for="inline-checkbox3" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox3" name="hobby"
                                                        value="travel" class="form-check-input" <%
                                                        if(Update.hobby.includes('travel')){%>
                                                    <%= 'checked' %>
                                                        <% } %>>Travel
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <% let city=["surat","rajkot","bhruch","navasri"]%>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="select" class=" form-control-label">Select City</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <select name="city" id="select" class="form-control">
                                                    <option value="">-- Select City -- </option>
                                                    <% city.map((v)=>{ %>
                                                        <option value="<%= v %>">
                                                            <%= v %>
                                                        </option>
                                                        <%});%>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="file-input" class=" form-control-label">Upload Image</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="file" id="file-input" name="AdminImage"
                                                    class="form-control-file" value="<%=Update.AdminImage%>">
                                            </div>
                                        </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Edit Record
                                </button>
                                <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer')%>