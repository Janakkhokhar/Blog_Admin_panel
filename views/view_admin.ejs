<%- include('header')%>


    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-12">
                        <!-- DATA TABLE -->
                        <h3 class="title-5 m-b-35">View Data </h3>
                        <div class="table-data__tool">
                            <div class="table-data__tool-left">
                                <div class="rs-select2--light rs-select2--md">
                                    <select class="js-select2" name="property">
                                        <option selected="selected">All Properties</option>
                                        <option value="">Option 1</option>
                                        <option value="">Option 2</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <div class="rs-select2--light rs-select2--sm">
                                    <select class="js-select2" name="time">
                                        <option selected="selected">Today</option>
                                        <option value="">3 Days</option>
                                        <option value="">1 Week</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                                <button class="au-btn-filter">
                                    <i class="zmdi zmdi-filter-list"></i>filters</button>
                            </div>
                            <div class="table-data__tool-right">
                                <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="zmdi zmdi-plus"></i>add item</button>
                                <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                    <select class="js-select2" name="type">
                                        <option selected="selected">Export</option>
                                        <option value="">Option 1</option>
                                        <option value="">Option 2</option>
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                            </div>
                        </div>
                        <form action="">
                            <input type="text" name="search" value="<%=search%>">
                            <input type="submit" value="Search">
                        </form>

                        <form action="/admin/DeleteAllRecord" method="post">
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th>
                                                <label class="au-checkbox">
                                                    <input type="checkbox" id="Allchechbox">
                                                    <span class="au-checkmark"></span>

                                                    <button class="item" type="submit" data-toggle="tooltip"
                                                        data-placement="top" title="Delete">
                                                        <a href=""><i class="zmdi zmdi-delete"
                                                                style="margin-left: 25px;"></i></a>
                                                    </button>
                                                </label>
                                            </th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>description</th>
                                            <th>Gender</th>
                                            <th>Hobby</th>
                                            <th>City</th>
                                            <th>Image</th>
                                            <th>status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%if(AData!= '' ){%>
                                            <% for (let ab of AData){%>
                                                <tr class="tr-shadow">
                                                    <td>
                                                        <label class="au-checkbox">
                                                            <input type="checkbox" class="checkBoxClass"
                                                                value="<%=ab._id%>" name="deleteAll[]">
                                                            <span class="au-checkmark"></span>
                                                        </label>
                                                    </td>
                                                    <td>
                                                        <%=ab.name%>
                                                    </td>
                                                    <td>
                                                        <%=ab.email%>
                                                    </td>
                                                    <td>
                                                        <%=ab.description%>
                                                    </td>
                                                    <td>
                                                        <%=ab.gender%>
                                                    </td>
                                                    <td>
                                                        <%=ab.hobby%>
                                                    </td>
                                                    <td>
                                                        <%=ab.city%>
                                                    </td>
                                                    <td> <img src="<%=ab.AdminImg%>" height="50"> </td>
                                                    <td>
                                                        <%if(ab.isActive){%>
                                                            <a href="/admin/activedata/<%=ab.id%>"
                                                                class="btn btn-success">Active</a>
                                                            <%} else{%>
                                                                <a href="/admin/deactivedata/<%=ab.id%>"
                                                                    class="btn btn-danger">DeActive</a>
                                                                <%}%>
                                                    </td>

                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Send">
                                                                <i class="zmdi zmdi-mail-send"></i>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Edit" type="button">

                                                                <a href="/admin/updatedata/<%=ab.id%>"><i
                                                                        class="zmdi zmdi-edit"></i></a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Delete" type="button">
                                                                <a href="/admin/delelerecord/<%=ab.id%>"> <i
                                                                        class="zmdi zmdi-delete"></i></a>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="More">
                                                                <i class="zmdi zmdi-more"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <%}} else {%>
                                                    <tr>
                                                        <td colspan="10">Not Record Found </td>
                                                    </tr>
                                                    <%}%>
                                                        
                                                        <tr>
                                                            <td colspan="10" align="center">
                                                                <% var prevpage=parseInt(currentpage)-1%>
                                                                    <%if(prevpage>=0){%>
                                                                        <a href="?page=<%=prevpage%>"
                                                                            class="btn btn-primary btn-sm ">Prev</a>
                                                                        <%}%>


                                                                            <a href="?page=<%=currentpage%>">
                                                                                <%=parseInt(currentpage)+1%>
                                                                            </a>
                                                                            <% var nextpage=parseInt(currentpage)+1%>
                                                                                <%if(totalDocument> nextpage){%>
                                                                                    <a href="?page=<%=nextpage%>"
                                                                                        class="btn btn-primary btn-sm ">Next</a>
                                                                                    <%}%>

                                                            </td>
                                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                        <!-- END DATA TABLE -->
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>

    </div>
    <%- include('footer')%>

        <script>
            $(document).ready(function () {
                $("#Allchechbox").click(function () {
                    $(".checkBoxClass").prop('checked', $(this).prop('checked'));
                });
            });
        </script>