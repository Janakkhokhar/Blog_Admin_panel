<%- include('header')%>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit ProFile</strong>
                            </div>
                            <div class="card-body card-block">
                                <form action="/admin/editprofile" method="post" enctype="multipart/form-data"
                                    class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="file-input" class="form-control-label">Upload Image</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="file" id="file-input" name="AdminImage"
                                                class="form-control-file">
                                            <img src="<%=admin.AdminImage%>" height="50">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">Enter Your Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="name" placeholder="EnterYour Name"
                                                class="form-control" value="<%=admin.name%>">

                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Enter Your Email
                                            </label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" name="email" placeholder="Enter Email"
                                                class="form-control" value="<%=admin.email%>">

                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Select Gender</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-radio1" class="form-check-label ">
                                                    <input type="radio" id="inline-radio1" name="gender" value="male"
                                                        class="form-check-input" <% if(admin.gender =='male' ){%><%= 'checked' %><%}%>>Male
                                                </label>
                                                <label for="inline-radio2" class="form-check-label ">
                                                    <input type="radio" id="inline-radio2" name="gender" value="female"
                                                        class="form-check-input" <% if(admin.gender =='female' ){%><%= 'checked' %><%}%>>Female
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <% let city=["surat","rajkot","bhruch","navasri"]%>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="select" class=" form-control-label">Select City</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <select name="city" id="select" class="form-control">
                                                    <option value="">-- Select City -- </option>
                                                    <% city.map((v)=>{ %>
                                                        <option value="<%= v %>">
                                                            <%= v %>
                                                        </option>
                                                        <%})%>
                                                </select>
                                            </div>
                                        </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer')%>